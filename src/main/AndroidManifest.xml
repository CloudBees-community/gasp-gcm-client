<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cloudbees.demo.gasp"
    android:versionCode="1"
    android:versionName="1.0">

    <!-- GCM requires Android SDK version 2.2 (API level 8) or above. -->
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" /> -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <!-- Creates a custom permission so only this app can receive its messages. -->
    <permission
        android:name="com.cloudbees.demo.gasp.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.cloudbees.demo.gasp.permission.C2D_MESSAGE" />

    <!-- Main activity. -->
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="true">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCPeVw7KcmYYbnoXKqOEI6P63vTis3UZ0A" />

        <!-- Gasp! Maps activity -->
        <activity android:name=".activity.LocationsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Gasp! preferences activity -->
        <activity
            android:name="com.cloudbees.demo.gasp.activity.SetPreferencesActivity"
            android:parentActivityName="com.cloudbees.demo.gasp.activity.LocationsActivity"
            android:label="@string/gasp_preferences">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cloudbees.demo.gasp.activity.LocationsActivity" />
        </activity>

        <!-- Gasp! Twitter stream activity -->
        <activity
            android:name="com.cloudbees.demo.gasp.activity.TwitterStreamActivity"
            android:parentActivityName="com.cloudbees.demo.gasp.activity.LocationsActivity"
            android:label="@string/gasp_twitter">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cloudbees.demo.gasp.activity.LocationsActivity" />
        </activity>

        <!-- Gasp! REST data services -->
        <service android:name="com.cloudbees.demo.gasp.service.RESTIntentService" />

        <!-- Gasp! add review activity -->
        <activity
            android:name="com.cloudbees.demo.gasp.activity.ReviewActivity"
            android:parentActivityName="com.cloudbees.demo.gasp.activity.PlacesActivity"
            android:label="@string/gasp_add_review">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cloudbees.demo.gasp.activity.PlacesActivity" />
        </activity>

        <!-- Gasp! Google Places API activity -->
        <activity
            android:name="com.cloudbees.demo.gasp.activity.PlacesActivity"
            android:parentActivityName="com.cloudbees.demo.gasp.activity.LocationsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cloudbees.demo.gasp.activity.LocationsActivity" />
        </activity>
        <activity
            android:name="com.cloudbees.demo.gasp.activity.PlacesDetailActivity"
            android:parentActivityName="com.cloudbees.demo.gasp.activity.PlacesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cloudbees.demo.gasp.activity.PlacesActivity" />
        </activity>


        <!-- Gasp! database activities -->
        <activity
            android:name="com.cloudbees.demo.gasp.activity.ReviewListActivity"
            android:parentActivityName="com.cloudbees.demo.gasp.activity.LocationsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cloudbees.demo.gasp.activity.LocationsActivity" />
        </activity>
        <activity
            android:name="com.cloudbees.demo.gasp.activity.RestaurantListActivity"
            android:parentActivityName="com.cloudbees.demo.gasp.activity.LocationsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cloudbees.demo.gasp.activity.LocationsActivity" />
        </activity>
        <activity
            android:name="com.cloudbees.demo.gasp.activity.UserListActivity"
            android:parentActivityName="com.cloudbees.demo.gasp.activity.LocationsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cloudbees.demo.gasp.activity.LocationsActivity" />
        </activity>

        <!-- Login with Amazon/Google -->
        <activity
            android:name="com.cloudbees.demo.gasp.activity.AmazonSignInActivity"
            android:parentActivityName="com.cloudbees.demo.gasp.activity.LocationsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cloudbees.demo.gasp.activity.LocationsActivity" />
        </activity>
        <activity
            android:name="com.cloudbees.demo.gasp.activity.GoogleSignInActivity"
            android:parentActivityName="com.cloudbees.demo.gasp.activity.LocationsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cloudbees.demo.gasp.activity.LocationsActivity" />
        </activity>
        <activity
            android:name="com.amazon.identity.auth.device.authorization.AuthorizationActivity"
            android:theme="@android:style/Theme.NoDisplay"
            android:allowTaskReparenting="true"
            android:launchMode="singleTask"
            android:configChanges="keyboard|keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="com.cloudbees.demo.gasp"
                    android:scheme="amzn" />
            </intent-filter>
        </activity>

        <!-- Gasp! data synchronization services -->
        <service android:name="com.cloudbees.demo.gasp.service.ReviewSyncService" />
        <service android:name="com.cloudbees.demo.gasp.service.RestaurantSyncService" />
        <service android:name="com.cloudbees.demo.gasp.service.UserSyncService" />
        <service android:name="com.cloudbees.demo.gasp.service.ReviewUpdateService" />
        <service android:name="com.cloudbees.demo.gasp.service.RestaurantUpdateService" />
        <service android:name="com.cloudbees.demo.gasp.service.UserUpdateService" />

        <!-- Handles incoming messages from GCM -->
        <service android:name="com.cloudbees.demo.gasp.gcm.GCMIntentService" />

        <!-- BroadcastReceiver for GCM messages -->
        <!-- Only GCM services can send data messages for the app -->
        <receiver
            android:name="com.cloudbees.demo.gasp.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.google.android.demo.app" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
