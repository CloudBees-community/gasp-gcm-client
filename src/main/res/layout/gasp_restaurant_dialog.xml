<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="6dp">

    <TextView
        android:id="@+id/restaurant_dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/restaurant_dialog_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restaurant_dialog_name"/>

    <TextView
        android:id="@+id/restaurant_dialog_placesId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restaurant_dialog_url"/>

    <TextView
        android:id="@+id/restaurant_dialog_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restaurant_dialog_placesId"/>

    <Button
        android:id="@+id/restaurant_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/restaurant_dialog_website"/>
</RelativeLayout>