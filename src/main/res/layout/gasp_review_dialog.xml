<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="6dp">

    <TextView
        android:id="@+id/review_dialog_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/review_dialog_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_dialog_url" />

    <TextView
        android:id="@+id/review_dialog_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_dialog_restaurant" />

    <TextView
        android:id="@+id/review_dialog_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_dialog_user" />

    <TextView
        android:id="@+id/review_dialog_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_dialog_star" />

    <Button
        android:id="@+id/review_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/review_dialog_star"/>
</RelativeLayout>